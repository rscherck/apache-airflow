// These libraries need to be installed for linting and opinionated code formatter
// pip3 install pylint
// pip3 install pylint-django
// pip3 install autopep8

{
    "editor.formatOnSave": true,
    "python.formatting.provider": "autopep8",
    "python.linting.lintOnSave": true,
    "python.linting.enabled": true, // turning on causing duplicate linting warning/errors
    "python.linting.pylintEnabled": true, // turns on pylint library
}